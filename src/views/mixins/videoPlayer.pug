mixin videoPlayer(video ={})
  .videoPlayer#jsVideoPlayer
    video(src=`${video.src}`)
    .videoPlayer__controls
      .videoPlayer__columns
        input.videoPlyaer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
        span#jsVolumeBtn
          i.fas.fa-volume-up
        span
          span#currentTime 00:00:00 
          |/
          span#totalTime 00:00:00
      .videoPlayer__columns
        span#jsPlayButton
          i.fas.fa-play
      .videoPlayer__columns
        span#jsFullScreen
          i.fas.fa-expand