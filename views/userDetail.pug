extends layouts/main.pug
include mixins/videoBlock

block content
  .user-profile
    .user-profile-header
      img.avatar(src=user.avatarUrl)
      h4.profile__username=user.name
    if loggedUser && user.id === loggedUser.id
      .user-profile__btns
        a.form-container__link(href=`users${routes.editProfile}`) Edit Profile
    .home-videos
      each item in user.videos
        +videoBlock({
          id: item.id,
          title: item.title,
          views: item.views,
          videoFile: `/${item.fileUrl}`,
        })